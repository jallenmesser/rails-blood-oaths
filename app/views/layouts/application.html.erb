<!DOCTYPE html>
<html>
  <head>
    <title>RailsBloodOaths</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= image_tag "bloodoath.png", class: "logo-size"%>
    <div class="content">
      <div class="side">
        <% Cult.all.each do |cult| %>
          <div class="sidbar-cult">
            
            <%= link_to cult.name, cult %>
            <br>
          </div>
        <% end %>
        <%= link_to 'New Cult', new_cult_path %>
      </div>
      <div class="main-content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
